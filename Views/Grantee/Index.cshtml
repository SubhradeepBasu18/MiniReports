@model MiniReportsProject.ViewModel.SiteViewModel

<style>
    
    .grantee-page {
        background-color: #f8f9fa;
        min-height: 100vh;
        padding-bottom: 4rem;
    }

    .dashboard-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .section-spacing {
        margin-top: 3rem;
    }

    
    .page-header {
        background: #fff;
        border-bottom: 1px solid #dee2e6;
        padding: 2rem 0;
        margin-bottom: 2rem;
    }

    .page-header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 600;
        margin: 0;
        color: #212529;
    }

    .page-subtitle {
        font-size: 0.95rem;
        color: #6c757d;
        margin-top: .25rem;
    }

    .content-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .content-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0;
        color: #212529;
    }

    .btn-group-custom {
        display: flex;
        gap: .75rem;
        flex-wrap: wrap;
    }

    .btn-primary-custom,
    .btn-secondary-custom,
    .btn-success-custom,
    .logout-btn {
        border-radius: .375rem;
        font-weight: 500;
        text-decoration: none;
        display: inline-block;
        transition: all .15s ease-in-out;
        color: #fff;
    }

    .btn-primary-custom {
        background: #0d6efd;
        padding: .5rem 1rem;
    }

        .btn-primary-custom:hover {
            background: #0b5ed7;
        }

    .btn-secondary-custom {
        background: #6c757d;
        padding: .5rem 1rem;
    }

        .btn-secondary-custom:hover {
            background: #5c636a;
        }

    .btn-success-custom {
        background: #198754;
        padding: .4rem .8rem;
        font-size: .9rem;
    }

        .btn-success-custom:hover {
            background: #157347;
        }

    .logout-btn {
        background: #dc3545;
        padding: .5rem 1rem;
    }

        .logout-btn:hover {
            background: #c82333;
        }

    .sites-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .site-card {
        background: #fff;
        border: 1px solid #dee2e6;
        border-radius: .375rem;
        padding: 1.5rem;
        transition: box-shadow .15s ease-in-out;
    }

        .site-card:hover {
            box-shadow: 0 2px 8px rgba(0,0,0,.08);
        }

    .site-card-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .site-info {
        flex: 1;
        min-width: 250px;
    }

    .site-name {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: .25rem;
    }

    .site-details {
        font-size: .85rem;
        color: #6c757d;
    }

    .empty-state {
        background: #fff;
        border: 1px dashed #dee2e6;
        border-radius: .375rem;
        padding: 3rem 2rem;
        text-align: center;
    }

    .empty-state-title {
        font-weight: 600;
        margin-bottom: .5rem;
    }

    .empty-state-text {
        color: #6c757d;
    }

   @@media (max-width: 768px) {
        .page-header-content,
        .content-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .btn-group-custom,
        .btn-primary-custom,
        .btn-secondary-custom,
        .btn-success-custom {
            width: 100%;
            text-align: center;
        }
    }
</style>

<div class="grantee-page">

    <!-- Header -->
    <div class="page-header">
        <div class="dashboard-container page-header-content">
            <div>
                <h1 class="page-title">Grantee Dashboard</h1>
                <p class="page-subtitle">
                    Welcome, <strong>@Model.GranteeName</strong>
                </p>
            </div>
            <a href="@Url.Action("Index", "State")" class="logout-btn">Logout</a>
        </div>
    </div>

    <div class="dashboard-container">

        <!-- Sites -->
        <div class="content-header">
            <h2 class="content-title">Sites</h2>
            <div class="btn-group-custom">
                <a href="@Url.Action("Create","Site",new { id = Model.GranteeID })"
                   class="btn-primary-custom">Add Site</a>
                <a href="@Url.Action("Index","School",new { id = Model.GranteeID })"
                   class="btn-secondary-custom">Link School</a>
            </div>
        </div>

        @if (!Model.siteList.Any())
        {
            <div class="empty-state">
                <h3 class="empty-state-title">No sites yet</h3>
                <p class="empty-state-text">Create your first site to get started</p>
                <a href="@Url.Action("Create","Site",new { id = Model.GranteeID })"
                   class="btn-primary-custom">Create Site</a>
            </div>
        }
        else
        {
    <div class="sites-list">
        @foreach (var site in Model.siteList)
        {
            <div class="site-card">
                <div class="site-card-content">

                    <div class="site-info">
                        <h3 class="site-name">@site.SiteName</h3>
                        @if (!string.IsNullOrEmpty(site.Address))
                        {
                            <p class="site-details">@site.Address</p>
                        }
                    </div>

                    <div class="site-actions">
                        <a href="@Url.Action("Edit","Site",new { id = site.SiteID })"
                           class="btn-secondary-custom">
                            Edit
                        </a>
                    </div>

                    <div class="site-actions">
                        <a href="@Url.Action("Index","Site",new { id = site.SiteID })"
                           class="btn-success-custom">
                            Logon
                        </a>
                    </div>

                    <div class="site-actions">
                        <form method="post"
                              action="@Url.Action("DeleteConfirm","Site",new { id = site.SiteID })"
                              onsubmit="return confirm('Are you sure you want to delete this site?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@site.SiteID" />

                            <button type="submit"
                                    class="btn btn-sm btn-outline-danger">
                                Delete
                            </button>
                        </form>
                    </div>

                </div>
            </div>

        }
    </div>
        }

        <!-- Programs -->
        <div class="section-spacing">
            <h2 class="content-title">Programs</h2>

            @if (Model.ProgramList == null || !Model.ProgramList.Any())
            {
                <div class="empty-state">
                    <h3 class="empty-state-title">No programs available</h3>
                    <p class="empty-state-text">Programs will appear once sites are linked</p>
                </div>
            }
            else
            {
                <div class="sites-list">
                    @foreach (var program in Model.ProgramList)
                    {
                        <div class="site-card">
                            @*<h3 class="site-name">@program.ProgramType</h3>*@
                            <h3 class="site-name">
                                @Html.ActionLink(program.ProgramType,
                                                 "Index",
                                                 "Program",
                                                 new { id = program.ProgramID },
                                                 null)
                            </h3>
                            <table class="table table-sm mt-3 mb-0">
                                <thead>
                                    <tr>
                                        <th>Site</th>
                                        <th>School</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@program.SiteCount</td>
                                        <td>@program.SchoolCount</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            }
        </div>

    </div>
</div>
