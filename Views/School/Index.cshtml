@model MiniReportsProject.ViewModel.LinkSchoolSiteViewModel

@{
    ViewBag.Title = "Link Schools to Site";
    var totalSchools = Model.schoolList.Count();
    var granteeID = Model.GranteeID;
}

<div class="container-fluid mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h3 class="mb-0 fw-bold">Unlinked Schools</h3>
            <small class="text-muted">Select one site and one or more schools</small>
        </div>
        <div>
            <a href="@Url.Action("Index", "Grantee", new { id = granteeID })" class="btn btn-outline-secondary">
                Back to Grantee Dashboard
            </a>
        </div>
    </div>

    <form method="post" action="@Url.Action("LinkSelected", "School")">
        @Html.AntiForgeryToken()

        <!-- Summary -->
        <div class="card shadow-sm border mb-4">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <strong class="fs-4">@totalSchools</strong>
                    <div class="text-muted small">Total unlinked schools</div>
                </div>

                <div>
                    <span class="me-3 text-muted">
                        Selected schools:
                        <strong id="schoolCount">0</strong>
                    </span>
                    <button id="linkBtn" type="submit" class="btn btn-success" disabled>
                        Link Selected
                    </button>
                </div>
            </div>
        </div>

        <!-- Sites (single select) -->
        <h5 class="fw-bold mb-2">Select a Site</h5>
        <div class="card shadow-sm border mb-5">
            <div class="table-responsive">
                <table class="table mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width:48px"></th>
                            <th>Site Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.siteList == null || !Model.siteList.Any())
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted py-4">
                                    No sites available
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var site in Model.siteList)
                            {
                                <tr>
                                    <td>
                                        <input type="radio"
                                               name="siteId"
                                               value="@site.SiteID"
                                               required />
                                    </td>
                                    <td class="fw-semibold">@site.SiteName</td>
                                </tr>
                            }

                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Schools (multi select) -->
        <h5 class="fw-bold mb-2">Select Schools</h5>
        <div class="card shadow-sm border">
            <div class="table-responsive">
                <table class="table mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width:48px"></th>
                            <th>School Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.schoolList == null || !Model.schoolList.Any())
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted py-4">
                                    No unlinked schools found
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var school in Model.schoolList)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox"
                                               class="school-checkbox"
                                               name="selectedIds"
                                               value="@school.SchoolID" />
                                    </td>
                                    <td class="fw-semibold">@school.SchoolName</td>
                                </tr>
                            }

                        }
                    </tbody>
                </table>
            </div>
        </div>

    </form>
</div>

@section Scripts {
    <script>
        (function () {
            const checkboxes = document.querySelectorAll('.school-checkbox');
            const countEl = document.getElementById('schoolCount');
            const btn = document.getElementById('linkBtn');

            function update() {
                const selected = document.querySelectorAll('.school-checkbox:checked').length;
                countEl.textContent = selected;
                btn.disabled = selected === 0;
            }

            checkboxes.forEach(cb => cb.addEventListener('change', update));
            update();
        })();
    </script>
}
