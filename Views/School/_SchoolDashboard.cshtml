@model IEnumerable<MiniReportsProject.Models.SchoolModel>

<div class="card shadow-sm border mb-3">
    <div class="card-header bg-white border-bottom">
        <h5 class="mb-0 fw-bold text-dark">School Dashboard</h5>
    </div>

    <div class="card-body">
        <div class="mb-3 d-flex gap-2">
            @* Use ViewBag.SiteId provided by the controller when available *@
            <a href="@Url.Action("Add", "School", new { id = ViewBag.SiteId })" class="btn btn-outline-primary">
                + Add School
            </a>
            <a href="@Url.Action("Index", "School", new { id = ViewBag.SiteId })" class="btn btn-outline-secondary">
                Link an existing school
            </a>
        </div>

        @if (!Model.Any())
        {
            <div class="text-muted">No schools found.</div>
        }
        else
        {
            foreach (var school in Model)
            {
                <div class="row align-items-center py-2 border-bottom">
                    <div class="col-md-8">
                        <span class="fs-6 text-dark">→ @school.SchoolName</span>
                    </div>
                    <div class="col-md-4 text-end">
                        <a href="@Url.Action("Details", "School", new { id = school.SchoolID })" class="btn btn-sm btn-outline-secondary">
                            View
                        </a>
                    </div>
                </div>
            }
        }
    </div>
</div>