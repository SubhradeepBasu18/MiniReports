@model MiniReportsProject.ViewModel.SiteSchoolsViewModel

@{
    ViewBag.Title = "Schools";
    var siteId = Model?.SiteID ?? 0;
    var total = Model?.Schools?.Count() ?? 0;
    var granteeId = Model.GranteeID;
}

<style>
    .school-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        border-bottom: 1px solid #dee2e6;
    }

    .school-item:last-child {
        border-bottom: none;
    }

    .school-info {
        flex: 1;
    }

    .school-name {
        font-weight: 400;
        color: #212529;
        margin: 0;
    }

    .school-actions {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    .btn-sm {
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
    }

    .delete-form {
        display: inline;
        margin: 0;
    }
</style>

<div class="container-fluid mt-4">

    <!-- Header / Breadcrumb -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0 fw-bold text-dark">
                Site Dashboard
            </h1>
            @*<h3 class="mb-0 fw-bold text-dark">Schools</h3>*@
            <small class="text-muted">Manage schools for this site @if (Model?.GranteeName != null) { <text>· @Model.GranteeName</text> }</small>
        </div>

        <div class="d-flex align-items-center gap-2">
            <a href="@Url.Action("Add", "School", new { id = siteId})" class="btn btn-primary" aria-label="Add a school">
                + Add School
            </a>
            @*<a href="@Url.Action("Index", "School", new { id = siteId })" class="btn btn-outline-secondary" aria-label="Link an existing school">
                Link School
            </a>*@
            <a href="@Url.Action("Index", "Grantee", new { id = granteeId })" class="btn btn-outline-secondary">
                Back
            </a>
        </div>
    </div>

    <!-- Summary -->
    <div class="row mb-3">
        <div class="col">
            <div class="card border-0 bg-light py-2 px-3">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <strong class="fs-4">@total</strong>
                        <div class="text-muted small">Total schools</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div>
        <h2>
            List of schools under this site
        </h2>
    </div>
    <!-- Schools list -->
    <div class="card shadow-sm border">
        <div class="card-body p-0">
            @if (Model?.Schools == null || !Model.Schools.Any())
            {
                <div class="text-center text-muted py-5">
                    No schools found for this site.
                </div>
            }
            else
            {
                foreach (var school in Model.Schools)
                {
                    <div class="school-item">
                        <div class="school-info">
                            <p class="school-name">@school.SchoolName</p>
                        </div>

                        <div class="school-actions">
                            <a href="@Url.Action("Details", "School", new { id = school.SchoolID })" class="btn btn-sm btn-success">
                                Open
                            </a>
                            <a href="@Url.Action("Edit", "School", new { id = school.SchoolID })" class="btn btn-sm btn-outline-primary">
                                Edit
                            </a>
                            <form method="post" action="@Url.Action("DeleteConfirm", "School")" class="delete-form" onsubmit="return confirm('Are you sure you want to delete this school?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@school.SchoolID" />
                                <input type="hidden" name="siteId" value="@siteId" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
