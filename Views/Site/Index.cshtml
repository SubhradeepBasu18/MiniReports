@model MiniReportsProject.ViewModel.SiteSchoolsViewModel

@{
    ViewBag.Title = "Schools";
    var siteId = Model?.SiteID ?? 0;
    var total = Model?.Schools?.Count() ?? 0;
    var granteeId = Model?.GranteeID ?? 0;
}

<div class="container-fluid mt-4">

    <!-- Header / Breadcrumb -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="mb-0 fw-bold text-dark">Schools</h3>
            <small class="text-muted">Manage schools for this site @if (Model?.GranteeName != null) { <text>· @Model.GranteeName</text> }</small>
        </div>

        <div class="d-flex align-items-center">
            <a href="@Url.Action("Create", "School", new { siteId = siteId, granteeId = granteeId })" class="btn btn-primary me-2" aria-label="Add a school">
                + Add a school
            </a>
            <a href="@Url.Action("LinkExisting", "School", new { siteId = siteId, granteeId = granteeId })" class="btn btn-outline-secondary me-3" aria-label="Link an existing school">
                Link an existing school
            </a>
            <a href="@Url.Action("Index", "Grantee", new { id = granteeId })" class="btn btn-outline-secondary">
                Back to Grantee Dashboard
            </a>
        </div>
    </div>

    <!-- Summary -->
    <div class="row mb-3">
        <div class="col">
            <div class="card border-0 bg-light py-2 px-3">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <strong class="fs-4">@total</strong>
                        <div class="text-muted small">Total schools</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Schools list -->
    <div class="card shadow-sm border">
        <div class="card-body">
            @if (Model?.Schools == null || !Model.Schools.Any())
            {
                <div class="text-center text-muted py-5">
                    No schools found for this site.
                </div>
            }
            else
            {
                <div class="list-group">
                    @foreach (var school in Model.Schools)
                    {
                        <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <div class="fw-semibold">@school.SchoolName</div>
                            </div>

                            <div class="d-flex align-items-center">
                                <a href="@Url.Action("Index", "School", new { id = school.SchoolID })" class="btn btn-sm btn-success me-2">Open</a>
                                <a href="@Url.Action("Edit", "School", new { id = school.SchoolID })" class="btn btn-sm btn-outline-primary me-2">Edit</a>
                                <a href="@Url.Action("Delete", "School", new { id = school.SchoolID })" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
