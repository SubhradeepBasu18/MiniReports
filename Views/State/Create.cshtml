@model MiniReportsProject.Models.GranteeCreateViewModel

@{
    ViewBag.Title = "Create Grantee";
}

<style>
    .min-h-screen {
        min-height: 100vh;
    }

    .form-card {
        max-width: 820px;
        margin: 48px auto;
    }

    .form-label {
        font-weight: 500;
        color: #374151;
    }

    .form-control,
    .form-select {
        padding: 0.55rem 0.75rem;
    }
</style>

<div class="w-100 min-h-screen bg-light">

    <!-- Card -->
    <div class="card border-0 shadow-sm form-card">

        <!-- Header -->
        <div class="card-header bg-white border-bottom px-4 py-3">
            <h5 class="mb-0 fw-semibold text-secondary">
                Create Grantee
            </h5>
        </div>

        <!-- Body -->
        <div class="card-body px-4 py-4">

            <p class="text-muted mb-4">
                Provide the required details to create a new grantee.
            </p>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger mb-4" })

                <!-- Name -->
                <div class="mb-4">
                    @Html.LabelFor(m => m.GranteeName, "Name", new { @class = "form-label" })
                    @Html.TextBoxFor(
                        m => m.GranteeName,
                        new
                        {
                            @class = "form-control",
                            placeholder = "Enter name"
                        })
                    @Html.ValidationMessageFor(m => m.GranteeName, "", new { @class = "text-danger" })
                </div>

                <!-- Grantee Type -->
                <div class="mb-4">
                    @Html.LabelFor(m => m.SelectedTypeName, "Grantee Type", new { @class = "form-label" })
                    @Html.DropDownListFor(
                        m => m.SelectedTypeName,
                        new SelectList(
                            Model.EntityTypes ?? Enumerable.Empty<MiniReportsProject.Models.EntityTypeModel>(),
                            "TypeName",
                            "TypeName",
                            Model.SelectedTypeName
                        ),
                        "Select type",
                        new { @class = "form-select" }
                    )
                    @Html.ValidationMessageFor(m => m.SelectedTypeName, "", new { @class = "text-danger" })
                </div>

                <!-- Address -->
                <div class="mb-4">
                    @Html.LabelFor(m => m.Address, new { @class = "form-label" })
                    @Html.TextBoxFor(
                        m => m.Address,
                        new
                        {
                            @class = "form-control",
                            placeholder = "Enter address"
                        })
                    @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                </div>

                <!-- Actions -->
                <div class="d-flex justify-content-end gap-2 pt-3">
                    <a href="@Url.Action("Index")"
                       class="btn btn-outline-secondary px-4">
                        Cancel
                    </a>

                    <button type="submit"
                            class="btn btn-primary px-4">
                        Create
                    </button>
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
